{% extends "./layout.njk" %}

    {% block head %}
        <title>{{item.title}}</title>
        
    {% endblock %}
    {% block content %}
        <div class="edit">
            <div class="edit-content">

                <form action="/admin/recipes?_method=PUT" method="POST">

                    <div class="description">
                        <h1>Editando receita</h1>
                        <div>
                            <button type="submit" class="save">Salvar receita</button>
                        </div>
                    </div>

                    <p>Imagem da receita</p>
                    <input type="text" name="image" value ="{{item.image}}">

                    <p>Ingredientes</p>
                    <div id="ingredients">
                            {% for ingredient in item.ingredients %}
                            <div class="ingredient">
                                <input type="text" name="ingredients[]" value="{{ingredient}}">
                            </div>
                            {% endfor %}
                    </div>
                    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
                    

                    <p>Modo de preparo</p>
                    <div id="preparations">
                        {% for preparation in item.preparation %}
                        <div class="preparation">
                            <input type="text" name="preparation[]" value="{{preparation}}">
                        </div>
                        {% endfor %}
                    </div>
                    <button type="button" class="add-preparation">Adicionar novo passo</button>

                    <p>Informações adicionais</p>
                    <textarea type="text" name="information">{{item.information}}</textarea>
                    

                    <input 
                    type="hidden" 
                    name="id" 
                    value={{item.id}}
                    >

                </form>

                <div class="description">
                    <form id="form-delete" action="/admin/recipes?_method=DELETE" method="POST">
                        <input type="hidden" name="id" value={{item.id}}>
                        <button type="submit" class="delete">Deletar</button>
                    </form>
                </div>

            </div>
        </div>

        <script>
            
                const formDelete = document.querySelector("#form-delete")
                formDelete.addEventListener("submit", function(event){
                    const confirmation = confirm("Deseja realmente deletar?")

                    if(!confirmation) {
                        event.preventDefault()
                    }
                })
            
            </script>
    {% endblock %}
