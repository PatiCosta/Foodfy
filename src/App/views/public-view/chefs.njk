{% extends "./layout.njk" %}

    {% block head %}
        <title>Foodfy - Chefs</title>
    {% endblock %}


    {% block content %}
        <div class="chefs-container">
            {% for chef in chefs %}
                <div class="chef-card" id="{{chef.id}}">
                    <img src="{{chef.avatar}}" alt="{{chef.name}}">
                    <div class="chef-card-info">
                        <h2>{{chef.name}}</h2>
                        <p>{{chef.total_recipes}} {% if chef.total_recipes > 1 %} receitas {% else %} receita {% endif %}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endblock %}