{% extends "./layout.njk" %}

    {% block head %}
        <title>Foodfy - Buscando por Receitas</title>
    {% endblock %}
    {% block content %}
        <div class="recipes-home">
            <h1>Buscando por "{{filter}}"</h1>
            <div class="cards">
                {% for item in items %}
                    <div class="card" id="{{item.id}}">
                        <img src="{{item.image}}" alt="{{item.title}}">
                        <div class="card-info">
                            <h2>{{item.title}}</h2>
                            <p>por {{item.chef_name}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}