{% extends "./layout.njk" %}

    {% block head %}
        <title>Foodfy - Procurar receita</title>
    {% endblock %}
    {% block content %}
        <div class="recipes-home">
            <h2 class="search">Buscando por ""</h2>
            <div class="cards">
                {% for item in items %}
                    <div class="card" id="{{item.id}}">
                        <img src="{{item.image}}" alt="{{item.title}}">
                        <div class="card-info">
                            <h2>{{item.title}}</h2>
                            <p>{{item.author}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}
