{% extends "./layout.njk" %}

    {% block head %}
        <title>{{recipe.title}}</title>
        
    {% endblock %}
    {% block content %}
        <div class="recipe-detail">
            <div class="gallery">
                <div class="highlight">
                    {% if not files[0] %}
                        <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" />
                    {% else %}
                        <img src="{{files[0].src}}" alt="{{files[0].name}}">
                    {% endif %}

                </div>
                <div class="gallery-preview">
                    {% for image in files %}
                        <img 
                            src="{{image.src}}" 
                            alt="{{image.name}}" 
                            {% if loop.index0 == 0 %}
                            class="active"
                            {%endif%}
                            onclick="ImageGallery.setImage(event)"
                            >
                    {% endfor %}
                </div>
            </div>

            <div class="recipe-title">
                <h1>{{recipe.title}}</h1>
                <h2>por {{recipe.chef_name}}</h2>
            </div>
            
            <div class="titles">
                <h1 class="title">Ingredientes</h1>
                <p class="button-ingredients">MOSTRAR</p>
            </div>
            <ul class="content-ingredients">
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>

            <div class="titles">
                <h1 class="title">Modo de Preparo</h1>
                <p class="button-prepare">MOSTRAR</p>
            </div>

            <ul class="content-prepare">
                {% for prepare in recipe.preparation %}
                    <li>{{prepare}}</li>
                {% endfor %}
            </ul>

            <div class="titles">
                <h1 class="title">Informações adicionais</h1>
                <p class="button-info">MOSTRAR</p>
            </div>
            <p class="content-info">{{recipe.information}}</p>
        </div>
    {% endblock %}
