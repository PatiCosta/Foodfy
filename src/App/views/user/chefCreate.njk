{% extends "./layout.njk" %}

    {% block head %}
        <title>Novo Chef</title>
        
    {% endblock %}
    {% block content %}
        <div class="edit">
            
            <div class="edit-content">
                <form action="/admin/chefs" method="POST">

                    <div class="description">
                        <h1>Criando Chef</h1>
                        <div>
                            <button type="submit" class="save">Salvar chef</button>
                        </div>
                    </div>

                    <p>Nome</p>
                    <input type="text" name="name">

                    <p>Avatar</p>
                    <input type="text" name="avatar_url">
                </form>
            </div>
        </div>
    {% endblock %}
