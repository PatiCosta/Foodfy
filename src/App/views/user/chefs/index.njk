{% extends "../layout.njk" %}

    {% block head %}
        <title>Foodfy - Chefs</title>
    {% endblock %}


    {% block content %}
    <div class="admin-list">
        <div class="admin-list-header">
            <h1>Chefs</h1>
            {%if session.isAdmin == true %}
            <a href="/admin/chefs/create">Novo</a>
            {% endif %}
        </div>
        <div class="chefs-container">
            {% for chef in chefs %}
                <div class="chef-card" id="{{chef.id}}">
                    <img src="{{chef.avatar}}" alt="{{chef.name}}">
                    <div class="chef-card-info">
                        <h2>{{chef.name}}</h2>
                        <a href="/admin/chefs/{{chef.id}}"><p>Visualizar</p></a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% endblock %}