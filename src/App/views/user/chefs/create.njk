{% extends "../layout.njk" %}

    {% block head %}
        <title>Novo Chef</title>
        
    {% endblock %}
    {% block content %}
        <div class="edit">
            
            <div class="edit-content">
                <form action="/admin/chefs" method="POST" enctype="multipart/form-data">

                    <div class="description">
                        <h1>Criando Chef</h1>
                        <div>
                            <button type="submit" class="save">Salvar chef</button>
                        </div>
                    </div>

                    <p>Nome</p>
                    <input type="text" name="name" value="{{chef.name}}">

                    <p>Avatar</p>
                    <div class="avatar-container">
                        <div class="avatar-preview">
                            <div class="avatar">
                                <input name="avatar_path" type="text" value="" disabled>
                            </div>
                        </div>
                        <div id="avatar-upload">
                            <div>
                                Enviar Avatar
                            </div>
                            <input id="avatar-input" type="file" name="avatar" accet="image/*" onchange="ChefAvatarUpload.handleFileInput(event)">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    {% endblock %}
