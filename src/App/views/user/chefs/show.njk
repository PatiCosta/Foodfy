{% extends "../layout.njk" %}

    {% block head %}
        <title>{{chef.name}}</title>
        
    {% endblock %}
    {% block content %}
        <div class="chef-detail admin">
            <div class="description">
                <h1>Chef: {{chef.name}}</h1>
                {%if session.isAdmin == true %}
                <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
                {% endif %}
            </div>
            <div class="chef-image">
                <img src="{{chef.avatar}}" alt="{{chef.name}}">
            </div>

            <div class="chef-title">
                <h1>{{chef.name}}</h1>
                <h2>{{chef.total_recipes}} {%if chef.total_recipes > 1 %} receitas {% else %} receita {% endif %}</h2>
            </div>
            
            <div class="titles">
                <h1 class="title">Receitas</h1>
            </div>
            <div class="admin-list-cards">
                {% for item in items %}
                    <div class="admin-list-card" id="{{item.id}}">
                        <img src="{{item.src}}" alt="{{item.title}}">
                        <div class="admin-list-card-info">
                            <h2>{{item.title}}</h2>
                            <p>por {{chef.name}}</p>
                            <a href="/admin/recipes/{{item.id}}">Visualizar</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
    {% endblock %}
