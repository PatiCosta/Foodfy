{% extends "../layout.njk" %}

    {% block head %}
        <title>Criar usuário</title>
        
    {% endblock %}
    {% block content %}
        <div class="edit container">
            <div class="edit-content user">
                <form action="/admin/users" method="POST">

                    <div class="description">
                        <h1>Criar usuário</h1>
                        <div>
                            <button type="submit" class="save">Salvar</button>
                            <a href="/admin/users">Cancelar</a>
                        </div>
                    </div>

                    <div class="input-group">
                        <div class="input-block">
                            <p>Nome</p>
                            <input type="text" name="name" placeholder="Digite o nome completo" value="{{user.name}}" required>
                        </div>
                        <div class="input-block">
                            <p>Email</p>
                            <input class="input-validate" type="email" name="email" value="{{user.email}}" placeholder="Digite o email" onblur="Validate.apply(this, 'isEmail')" required>
                        </div>
                    </div>

                    <div class="checkbox-group">

                        <input type="checkbox" name="is_admin" id="is_admin"> 
                        <p>Administrador</p>

                    </div>
        
                </form>
            </div>
        </div>
    {% endblock %}
